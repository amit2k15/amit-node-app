{
  "name": "amit-node-app",
  "version": "1.0.0",
  "description": "Node.js application with Docker and Jenkins CI/CD",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --ci --coverage --detectOpenHandles --reporters=default --reporters=jest-junit",
    "build": "echo 'Build completed' && exit 0",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "4.18.2"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "supertest": "7.0.0",
    "nodemon": "3.0.2",
    "eslint": "8.56.0",
    "eslint-config-standard": "17.1.0",
    "husky": "8.0.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.7"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testResultsProcessor": "jest-junit",
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "test-results",
        "outputName": "test-results.xml",
        "includeShortConsoleOutput": true
      }]
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "node",
    "express",
    "docker",
    "jenkins"
  ],
  "author": "Your Name",
  "license": "ISC",
  "volta": {
    "node": "18.17.1"
  }
}
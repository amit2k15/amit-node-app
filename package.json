{
  "name": "nodejs-docker-jenkins-demo",
  "version": "1.0.0",
  "description": "Node.js app with Docker and Jenkins CI/CD",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage --testPathPattern=src/tests --detectOpenHandles --forceExit",
    "test:ci": "jest --ci --coverage --testPathPattern=src/tests --reporters=default --reporters=jest-junit",
    "build": "echo 'Building...'",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.0.0",
    "nodemon": "^3.1.0",
    "eslint": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "husky": "^9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov"],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "test-results.xml"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}